<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/main_bg_gradient2">

    <!-- Profile Image Selection -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/add_photo"
        android:contentDescription="Profile Image"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/selectImageHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_to_select_profile_image"
        android:textColor="@color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Name Input -->
    <EditText
        android:id="@+id/nameInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="@string/enter_your_name"
        android:textColor="@color/text_primary"
        android:textColorHint="#cccccc"
        android:background="@drawable/gradient_corner_bg"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/selectImageHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Department Input -->
    <EditText
        android:id="@+id/departmentInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="@string/enter_your_department"
        android:textColor="@color/text_primary"
        android:textColorHint="#cccccc"
        android:background="@drawable/gradient_corner_bg"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/nameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Bio Input -->
    <EditText
        android:id="@+id/bioInput"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:hint="@string/write_a_short_bio"
        android:textColor="@color/background_dark"
        android:textColorHint="#cccccc"
        android:background="@drawable/gradient_corner_bg"
        android:gravity="top|start"
        android:padding="14dp"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:maxLines="5"
        app:layout_constraintTop_toBottomOf="@+id/departmentInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Save Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveProfileBtn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_button2"
        android:textColor="@color/white"
        android:text="@string/save_profile"
        android:textSize="22sp"
        android:paddingStart="64dp"
        android:padding="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="36dp"
        android:drawableEnd="@drawable/back"
        style="@android:style/Widget.Button"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/bioInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>