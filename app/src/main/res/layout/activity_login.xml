<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/main_bg_gradient3">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Logo Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logoContainer"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/stroke_grey_bg">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:padding="32dp"
                    android:src="@drawable/smu_logo2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Email Label -->
            <TextView
                android:id="@+id/EmailTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:textColor="@color/blue_dark"
                android:text="@string/your_email"/>

            <!-- Email Input -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/background_dark"
                android:textColorHint="#a2a4b5"
                android:ems="10"
                android:textSize="18sp"
                android:background="@drawable/stroke_white_bg"
                android:hint="@string/enter_your_email"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>


            <!-- password Label -->
            <TextView
                android:id="@+id/passwordTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                android:layout_marginStart="32dp"
                android:textStyle="bold"
                android:textColor="@color/blue_dark"
                android:text="@string/your_password"/>
            <!-- Password Input -->
            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/background_dark"
                android:textColorHint="#a2a4b5"
                android:ems="10"
                android:textSize="18sp"
                android:background="@drawable/stroke_white_bg"
                android:hint="@string/enter_your_password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_dark"
                android:text="@string/forgot_password"
                android:layout_marginTop="8dp"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="32dp"
                android:textSize="14sp"/>


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/loginBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- Login Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded_button3"
                android:textColor="@color/white"
                android:text="Log in"
                android:textSize="22sp"
                android:paddingStart="64dp"
                android:padding="4dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:drawableEnd="@drawable/ic_rightw"
                style="@android:style/Widget.Button"
                android:textAllCaps="false"/>

            <!-- Sign In Link -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signInLink"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/don_t_have_an_account_register"
                style="@android:style/Widget.Button"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/stroke_grey_bg"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>