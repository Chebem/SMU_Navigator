<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/main_bg_gradient2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigationBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Greeting Content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:paddingTop="32dp"
                android:paddingEnd="32dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="28dp"
                    android:scaleType="centerCrop"
                    android:transitionName="profilePic"
                    android:translationY="-20dp"
                    android:src="@drawable/profile"
                    app:strokeColor="@color/blue_dark"
                    app:strokeWidth="1dp"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Hi, Alex"
                    android:textColor="@color/blue_dark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/imageView"
                    app:layout_constraintStart_toEndOf="@id/imageView"
                    app:layout_constraintTop_toTopOf="@id/imageView" />

                <FrameLayout
                    android:id="@+id/notificationContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imageView">

                    <!-- Bell Icon -->
                    <ImageView
                        android:id="@+id/notificationBell"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/notification_bell"
                        android:contentDescription="Notification Bell" />

                    <!-- Red Dot -->
                    <View
                        android:id="@+id/badgeView"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/red_dot"
                        android:visibility="gone" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Search Text and Input -->
            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="@string/tap_go_explore"
                android:textColor="@color/blue_dark"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:alpha="0"
                android:background="@drawable/grey_bg"
                android:drawableStart="@drawable/search_icon"
                android:drawablePadding="8dp"
                android:elevation="2dp"
                android:hint="@string/where_do_you_wanna_go"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <!-- Live Map Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:id="@+id/liveMapSection"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/campusMapImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/smu" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:background="@drawable/map_button_bg"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/location3"
                            app:tint="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/live_campus_map"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">

                <LinearLayout
                    android:id="@+id/headerSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:animateLayoutChanges="true">

                    <TableLayout
                        android:id="@+id/tableMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*"
                        android:padding="6dp">


                    <TableRow>
                            <!-- Campus -->
                            <LinearLayout
                                android:id="@+id/campusSection"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/ripple_menu_item"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/campusIcon"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/school"
                                    android:background="@drawable/gradient_corner_bg"
                                    android:padding="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/campus"
                                    android:textColor="@color/blue_dark"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- City Guide -->
                            <LinearLayout
                                android:id="@+id/cityGuideSection"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/ripple_menu_item"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/cityGuideIcon"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/building"
                                    android:background="@drawable/gradient_corner_bg"
                                    android:padding="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/city_guide"
                                    android:textColor="@color/blue_dark"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- Events -->
                            <LinearLayout
                                android:id="@+id/eventsSection"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/ripple_menu_item"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/eventsIcon"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/calendar"
                                    android:background="@drawable/gradient_corner_bg"
                                    android:padding="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/events"
                                    android:textColor="@color/blue_dark"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- SMU Talk -->
                            <LinearLayout
                                android:id="@+id/smuTalkSection"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/ripple_menu_item"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/smutalkIcon"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/worldwide"
                                    android:background="@drawable/gradient_corner_bg"
                                    android:padding="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/smu_talk"
                                    android:textColor="@color/blue_dark"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- Bus Schedule -->
                            <LinearLayout
                                android:id="@+id/busScheduleSection"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/ripple_menu_item"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/busScheduleIcon"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/bus"
                                    android:background="@drawable/gradient_corner_bg"
                                    android:padding="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bus"
                                    android:textColor="@color/blue_dark"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>





        <!-- Social Feed Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/socialFeedTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/social_feed"
                    android:textStyle="bold"
                    android:textColor="@color/blue_dark"
                    android:textSize="16sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/socialFeedRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutAnimation="@anim/layout_fall_down"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clipToPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ProgressBar
                    android:id="@+id/progressBarSocial"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- Student Committees Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/commitees"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/student_committees"
                        android:textStyle="bold"
                        android:textColor="@color/blue_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/viewCommittees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:textAlignment="viewEnd"
                        android:textStyle="bold"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recommendedView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutAnimation="@anim/layout_fall_down"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:clipToPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ProgressBar
                        android:id="@+id/progressBarCommittee"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/stroke_white_bg"
        android:elevation="12dp"
        android:padding="0dp"
        app:cnb_iconColor="@color/blue_dark"
        app:cnb_iconSize="24dp"
        app:cnb_menuResource="@menu/menu_bottom"
        app:cnb_orientationMode="horizontal"
        app:cnb_radius="100dp"
        app:cnb_unselectedColor="@color/blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
