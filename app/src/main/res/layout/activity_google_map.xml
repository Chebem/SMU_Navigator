<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/googleMapRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GoogleMapActivity">

    <!-- ðŸ—ºï¸ Google Map Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/googleMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ” Search + Back Bar with shadow -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchBarRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="12dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/back3"
                android:background="@drawable/grey_bg"
                android:contentDescription="@string/back" />

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="@string/search_places"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:background="@drawable/rounded_white_card"
                android:drawableStart="@drawable/search_icon"
                android:paddingHorizontal="12dp"
                android:textColor="@color/blue_dark"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸŸ¦ Category Filters -->
    <HorizontalScrollView
        android:id="@+id/categoryScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/stroke_grey_bg"
        android:padding="8dp"
        android:elevation="4dp"
        android:scrollbars="none"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/searchBarRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/categoryGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFacilities"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/facilties"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                app:icon="@drawable/facilties"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:elevation="4dp"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:layout_height="wrap_content" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDorms"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/dorms"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                app:icon="@drawable/dorm"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:elevation="4dp"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConveniences"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/conveniences"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                app:icon="@drawable/ic_store"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:elevation="4dp"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRestaurants"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/restaurants"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                app:icon="@drawable/ic_food"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:elevation="4dp"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStores"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/stores"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                app:icon="@drawable/ic_shop"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:elevation="4dp"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCafe"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/coffee"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                app:icon="@drawable/cafe2"
                app:iconGravity="textStart"
                android:textAllCaps="false"
                app:iconPadding="4dp"
                android:elevation="4dp"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMart"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/mart"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                app:icon="@drawable/ic_shop"
                app:iconGravity="textStart"
                android:textAllCaps="false"
                app:iconPadding="4dp"
                android:elevation="4dp"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBar"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/bars"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                app:icon="@drawable/ic_bar"
                app:iconGravity="textStart"
                android:textAllCaps="false"
                app:iconPadding="4dp"
                android:elevation="4dp"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- ðŸ” FAB: Switch back to Kakao Map -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/location3"
        android:contentDescription="@string/my_location"
        app:backgroundTint="@color/blue_dark"
        app:tint="@android:color/white"
        app:rippleColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- ðŸ“Œ Popup Overlay (Now bigger and scrollable) -->
    <androidx.cardview.widget.CardView

        android:id="@+id/markerOverlayCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardElevation="8dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@+id/fabMyLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- ðŸ“· Image + Info Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/placeImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cafe2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:id="@+id/placeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/store_title"
                            android:textColor="@color/blue_dark"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/placeDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/placeAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address_info"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                        <TextView
                            android:id="@+id/placeHours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hours1"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                        <Button
                            android:id="@+id/btnCallStore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/call_store1"
                            android:backgroundTint="@color/blue_dark"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/navButtonsScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/navButtonsRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Favorite Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/favoriteBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:minHeight="0dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/favorite"
                            android:textSize="14sp"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:drawableStart="@drawable/heart__fav"
                            android:drawablePadding="8dp"
                            android:background="@drawable/rounded_button2"
                            android:backgroundTint="@color/blue_dark"
                            android:tint="@android:color/white"
                            style="@android:style/Widget.Button" />


                        <!-- ðŸš¶ Walk Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnWalk"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:minHeight="0dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/_7_min"
                            android:textSize="14sp"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:drawableStart="@drawable/ic_walk"
                            android:drawablePadding="8dp"
                            android:background="@drawable/rounded_button2"
                            android:backgroundTint="@color/blue_dark"
                            android:tint="@android:color/white"
                            style="@android:style/Widget.Button" />

                        <!-- âž¤ Directions Arrow Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnOpenMaps"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:minHeight="0dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/directions"
                            android:textSize="14sp"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:drawableStart="@drawable/ic_right_arrow"
                            android:drawablePadding="8dp"
                            android:background="@drawable/rounded_button2"
                            android:backgroundTint="@color/blue_dark"
                            android:tint="@android:color/white"
                            style="@android:style/Widget.Button" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
    <!-- ðŸš— Include the mode selector panel here -->
    <include
        android:id="@+id/modeSelectorLayout"
        layout="@layout/popup_transport_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/markerOverlayCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>