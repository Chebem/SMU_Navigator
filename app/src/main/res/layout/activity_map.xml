<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 📍 Fullscreen MapView (Background Layer) -->
    <com.kakao.vectormap.MapView
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >
    </com.kakao.vectormap.MapView>

    <!-- 🔍 Search + Back Bar with shadow -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchBarRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="12dp"
        android:clipChildren="false"
        android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/back3"
            android:background="@drawable/grey_bg"
            android:contentDescription="Back" />

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="@string/search_places1"
            android:background="@drawable/rounded_white_card"
            android:drawableStart="@drawable/search_icon"
            android:paddingHorizontal="12dp"
            android:textColor="@color/blue_dark"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- 🟦 Category Filters -->
    <HorizontalScrollView
        android:id="@+id/categoryScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/stroke_grey_bg"
        android:padding="8dp"
        android:elevation="4dp"
        android:scrollbars="none"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/searchBarRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/categoryGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFacilities"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/facilties"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                app:icon="@drawable/facilties"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:elevation="4dp"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:layout_height="wrap_content" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDorms"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Dorms"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                app:icon="@drawable/dorm"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:elevation="4dp"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConveniences"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Conveniences"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                app:icon="@drawable/ic_shop"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:elevation="4dp"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRestaurants"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Restaurants"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                app:icon="@drawable/ic_food"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:elevation="4dp"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStores"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Stores"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                app:icon="@drawable/ic_shop"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:elevation="4dp"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCafe"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Coffee"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_dark"
                android:textSize="14sp"
                app:icon="@drawable/cafe2"
                app:iconGravity="textStart"
                android:textAllCaps="false"
                app:iconPadding="4dp"
                android:elevation="4dp"
                app:cornerRadius="24dp"
                app:iconTint="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 📌 Popup Overlay -->
    <androidx.cardview.widget.CardView
        android:id="@+id/markerOverlayCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/placeImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cafe2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/placeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store Title"
                    android:textColor="@color/blue_dark"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/placeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address info"
                    android:textSize="13sp"
                    android:textColor="@color/gray_dark" />

                <TextView
                    android:id="@+id/placeHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours"
                    android:textSize="13sp"
                    android:textColor="@color/gray_dark" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSwitchToGoogle"
        android:layout_width="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/worldwide"
        android:contentDescription="Switch to Google Map"
        app:backgroundTint="@color/blue_dark"
        app:tint="@android:color/white"
        app:rippleColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
