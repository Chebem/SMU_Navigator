<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smunavigator2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.SMUNavigator"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <!-- Main launcher -->
        <activity
            android:name="com.example.smunavigator2.Activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SMUNavigator.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home screen -->
        <activity
            android:name="com.example.smunavigator2.Activity.MainActivity"
            android:exported="true" />

        <!-- Profile page -->
        <activity
            android:name="com.example.smunavigator2.Activity.ProfilePageActivity"
            android:exported="true"
            android:theme="@style/Theme.SMUNavigator" />


        <activity android:name="com.example.smunavigator2.Activity.ExploreActivity" />
        <activity android:name="com.example.smunavigator2.Activity.FavoritesActivity" />
        <activity android:name="com.example.smunavigator2.Activity.SettingsActivity" />
        <activity android:name="com.example.smunavigator2.Activity.CityGuideActivity"/>
        <activity android:name="com.example.smunavigator2.Activity.CampusActivity"/>


    </application>

</manifest>
